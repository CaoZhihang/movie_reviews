extends ../layout.jade

block content
  .container
    .row
      //- type="application/x-shockwave-flash"
      .col-md-7
        .text-center
          embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="640",height="320",align="middle",palette="transparent|black")
      .col-md-5
        dl.dl-horizontal
          dt 电影的名字
          dd #{movie.title}
          dt 导演
          dd #{movie.doctor}
          dt 国家
          dd #{movie.country}
          dt 语言
          dd #{movie.language}
          dt 上映年份
          dd #{movie.year}
          dt 简介
          dd #{movie.summary}